{
  "id": "flatcar-install",
  "name": "Flatcar Linux install to disk",
  "boot": {
    "kernel": "/assets/flatcar/current/flatcar_production_pxe.vmlinuz",
    "initrd": [
      "/assets/flatcar/current/flatcar_production_pxe_image.cpio.gz"
    ],
    "args": [
      "initrd=flatcar_production_pxe_image.cpio.gz",
      "flatcar.config.url=http://matchbox.example.com:8080/ignition?uuid=${uuid}&mac=${mac:hexhyp}",
      "flatcar.first_boot=yes",
      "console=tty0",
      "console=ttyS0",
      "flatcar.autologin"
    ]
  },
  "ignition_id": "flatcar-install.yaml"
}
